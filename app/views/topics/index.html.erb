<p id="notice"><%= notice %></p>

<h1>Topics</h1>
<div><%= link_to 'LogIn / SignUp', login_path, class: "btn btn-outline-primary" %></div>
<br>
<% @topics.each do |topic| %>
<div class="border shadow m-3 p-4 bg-light text-dark">
  <h3><%= topic.title %></h3>
  <p class="mt-3"><%= topic.body.gsub("<table>","<table class='table table-bordered'>").html_safe %></p>
  <p class="mt-3">Tags: <%= raw topic.tag_list.map { |t| link_to t, topics_path(tag: t) }.join(', ') %></p>
  <div><%= link_to 'Show', topic, class: "btn btn-outline-primary btn-sm" %> | <%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-outline-info btn-sm" %> | <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %> </div>
</div>
<%end%>


<br>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-outline-primary" %>
